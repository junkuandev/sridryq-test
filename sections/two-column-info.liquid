<section
  id="two-column-info-{{ section.id }}"
  class="two-column-info"
  style=""
>
  {% if section.settings.title != blank %}
    <h2 class="two-column-info__title">{{ section.settings.title }}</h2>
  {% endif %}

  <div class="two-column-info__grid page-width pp">
    <!-- Left Column -->
    <div class="two-column-info__left">
      {% if section.settings.text != blank %}
        <div class="two-column-info__text" style="color: {{ section.settings.text_color }};">
          {{ section.settings.text }}
        </div>
      {% endif %}

      {% if section.settings.image != blank %}
        <div class="two-column-info__image">
          <img
            src="{{ section.settings.image | image_url: width: 600 }}"
            alt="{{ section.settings.title | escape }}"
          >
        </div>
      {% endif %}
    </div>

    <!-- Right Column -->
    <div class="two-column-info__right">
      {% for block in section.blocks %}
        <div class="two-column-info__block" {{ block.shopify_attributes }}>
          {% if block.settings.show_divider %}
            <hr
              class="two-column-info__divider"
              style="
                margin:0 0 15px 0;
                border-top: {{ block.settings.divider_thickness }}px solid {{ block.settings.divider_color }};
                width: {{ block.settings.divider_width }}%;
              "
            >
          {% endif %}
          <div class="two-column-info__richtext" style="font-size: {{ block.settings.font_size }}px;">
            {{ block.settings.content }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
    #two-column-info-{{ section.id }} {
      background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  .two-column-info__grid {
    display: grid;
    grid-template-columns: 35% 65%;
    gap: 70px;
    align-items: start;
  }

  .two-column-info__left {
    display: flex;
    flex-direction: column;
  }

  .two-column-info__title {
    font-weight: 700;
    padding: 50px 0;
    text-align: center;
    font-size: 35px;
  }

  .two-column-info__text {
    font-weight: 700;
    font-size: 22px;
  }

  .two-column-info__text p {
    line-height: 38px;
    margin: 0;
  }

  .two-column-info__richtext p {
    line-height: 35px;
    width: 85%;
    margin: 0;
  }

  .two-column-info__image {
    width: 300px;
    height: 300px;
    overflow: hidden;
    border-radius: 8px;
  }

  .two-column-info__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  .two-column-info__block {
    margin-bottom: 30px;
  }

  /* On mobile, halve the padding dynamically */
  @media (max-width: 768px) {
    #two-column-info-{{ section.id }} {
      padding-top: 0px!important;
    }

    .two-column-info__grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .two-column-info__image {
      width: 100%;
      max-width: 300px;
      aspect-ratio: 1 / 1;
      height: auto;
    }

    .two-column-info__image img {
      object-fit: cover;
    }
  }
</style>

{% schema %}
{
  "name": "Two Column Info",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top (px)",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom (px)",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text content"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image below text"
    }
  ],
  "blocks": [
    {
      "type": "richtext_block",
      "name": "Rich Text Block",
      "settings": [
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "range",
          "id": "font_size",
          "label": "Font size",
          "min": 10,
          "max": 32,
          "step": 1,
          "default": 16,
          "unit": "px"
        },
        {
          "type": "checkbox",
          "id": "show_divider",
          "label": "Show divider line",
          "default": false
        },
        {
          "type": "color",
          "id": "divider_color",
          "label": "Divider color",
          "default": "#cccccc"
        },
        {
          "type": "range",
          "id": "divider_width",
          "label": "Divider width (%)",
          "min": 10,
          "max": 100,
          "step": 5,
          "default": 100,
          "unit": "%"
        },
        {
          "type": "range",
          "id": "divider_thickness",
          "label": "Divider thickness (px)",
          "min": 1,
          "max": 10,
          "step": 1,
          "default": 1,
          "unit": "px"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Two Column Info"
    }
  ]
}
{% endschema %}
