<!-- filepath: sections/trust-badges-row.liquid -->
<section class="trust-badges-row" style="background-color: {{ section.settings.bg_color }};">
  <div class="trust-badges-row__container page-width">
    {% for block in section.blocks %}
      <div class="trust-badges-row__item" {{ block.shopify_attributes }}>
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 80 }}"
            alt="{{ block.settings.text | escape }}"
            class="trust-badges-row__image"
            loading="lazy"
            width="80"
            height="80"
          >
        {% endif %}
        <span class="trust-badges-row__text">{{ block.settings.text }}</span>
      </div>
    {% endfor %}
  </div>
  <hr class="trust-badges-row__divider page-width">
</section>

{% schema %}
{
  "name": "Trust Badges Row",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#f9f9f9"
    }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Badge",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Badge image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Badge text",
          "default": "Secure Checkout"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Trust Badges Row",
      "blocks": [
        { "type": "badge", "settings": { "text": "Secure Checkout" } },
        { "type": "badge", "settings": { "text": "Fast Shipping" } },
        { "type": "badge", "settings": { "text": "Money Back Guarantee" } }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .trust-badges-row .page-width {
    padding: 42px 0;
  }
  .trust-badges-row__container {
    display: flex;
    flex-wrap: wrap;
    gap: 32px;
    justify-content: space-between;
    align-items: center;
  }
  .trust-badges-row__item {
    display: flex;
    align-items: center;
    gap: 35px;
    min-width: 180px;
  }
  .trust-badges-row__image {
    max-width: 85px;
    height: auto;
    object-fit: contain;
    display: block;
  }
  .trust-badges-row__text {
    color: #fff;
  }
  .trust-badges-row__divider {
    border: none;
    border-top: 1.5px solid #606060;
    margin: 0 auto;
    padding: 0 !important;
    margin-top: 32px;
    width: 90%;
  }
  @media (max-width: 767px) {
    .trust-badges-row__item * {
      max-width: 100px;
    }
    .trust-badges-row__container {
      justify-content: center;
      text-align: center;
      row-gap: 66px;
    }
  }
{% endstylesheet %}
