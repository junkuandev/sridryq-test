{{ 'stat-banner.css' | asset_url | stylesheet_tag }}

<section
  id="stat-banner-{{ section.id }}"
  class="stat-banner"
  data-align="{{ section.settings.text_alignment }}"
  style="margin-top: {{ section.settings.margin_top }}px;"
>
  <div class="stat-banner__content">
    <p class="stat-banner__text">
      {%- for block in section.blocks -%}
        {% case block.type %}
          {% when 'text' %}
            <span class="stat-banner__block">{{ block.settings.text }}</span>

          {% when 'highlight' %}
            <span
              id="stat-block-{{ block.id }}"
              class="stat-banner__block stat-banner__highlight"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.text }}
            </span>
        {% endcase %}
      {%- endfor -%}
    </p>
  </div>
</section>

<style>
  /* Per-section dynamic color */
  #stat-banner-{{ section.id }} .stat-banner__highlight {
    color: {{ section.settings.highlight_color }};
  }

  @media (max-width: 767px) {
    #shopify-section-{{ section.id }} {
      padding: 0 14px !important;
    }
  }
</style>

{% schema %}
{
  "name": "Statistic Banner",
  "settings": [
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Top margin (px)",
      "min": 0,
      "max": 200,
      "step": 2,
      "default": 40
    },
    {
      "type": "color",
      "id": "highlight_color",
      "label": "Highlight color",
      "default": "#b48b56"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Regular Text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Regular text"
        }
      ]
    },
    {
      "type": "highlight",
      "name": "Highlight Text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Highlight text",
          "default": "90%"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Statistic Banner",
      "category": "Custom",
      "blocks": [
        { "type": "text" },
        { "type": "highlight" },
        { "type": "text" },
        { "type": "highlight" },
        { "type": "text" }
      ]
    }
  ]
}
{% endschema %}
